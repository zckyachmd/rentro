APP_NAME=Rentro
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8888
APP_VERSION=0.1.0

# Localization & timezone
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_TIMEZONE=Asia/Jakarta

# Maintenance
APP_MAINTENANCE_DRIVER=file

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=warning

# Database (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=app
DB_USERNAME=app
DB_PASSWORD=secret

# Sessions/Queue/Cache
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis
CACHE_STORE=redis
CACHE_DRIVER=redis

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PORT=6379

# Broadcasting / Reverb (Realtime websockets)
BROADCAST_CONNECTION=reverb
BROADCAST_GLOBAL_PRIVATE=false
BROADCAST_GLOBAL_CHANNEL=global

# Reverb credentials (core)
REVERB_APP_ID=rentro
REVERB_APP_KEY=rentro-key
REVERB_APP_SECRET=rentro-secret

# Frontend (Vite)
VITE_APP_NAME=${APP_NAME}
VITE_REVERB_APP_KEY=${REVERB_APP_KEY}

# Notifications
NOTIFICATIONS_LOG_BROADCASTS=false
NOTIFICATIONS_USER_CHANNEL_PREFIX=user.
NOTIFICATIONS_FANOUT_CHUNK=1000
NOTIFICATIONS_CONTROLLER_DEFAULT_SCOPE=system
NOTIFICATIONS_ANNOUNCEMENTS_PERSIST=true
NOTIFICATIONS_SYSTEM_PERSIST=true

# Mail (log by default)
MAIL_MAILER=log
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME=${APP_NAME}

# Reverse proxy / HTTPS
FORCE_HTTPS=false
TRUSTED_PROXIES=*
TRUSTED_HOSTS=^.*$

# Payments
MIDTRANS_PRODUCTION=true
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=

# Diagnostics (optional; do not enable in production)
PROXY_DEBUG_ENABLED=${APP_DEBUG}
# PROXY_DEBUG_TOKEN=
