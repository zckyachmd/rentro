APP_NAME=Rentro
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8888
APP_HTTP_PORT=8888
APP_VERSION=0.1.0

# Localization & timezone
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_TIMEZONE=Asia/Jakarta

# Maintenance
APP_MAINTENANCE_DRIVER=file

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=warning

# Database (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=app
DB_USERNAME=app
DB_PASSWORD=secret

# Sessions/Queue/Cache
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis
CACHE_STORE=redis
CACHE_DRIVER=redis

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PORT=6379

# Mail (log by default)
MAIL_MAILER=log
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME=${APP_NAME}

# Vite/SSR
VITE_APP_NAME=${APP_NAME}
VITE_APP_URL=${APP_URL}
# For dev via HTTPS tunnel (e.g., Cloudflare), set your public origin:
# VITE_PUBLIC_URL=https://your-domain.example
VITE_I18N_PRELOAD_ALL=false
VITE_DISABLE_HMR=1
INERTIA_SSR_ENABLED=true
INERTIA_SSR_URL=http://ssr:13714
INERTIA_SSR_ONLY_PUBLIC=true
INERTIA_SSR_CONNECT_TIMEOUT=1.0
INERTIA_SSR_TIMEOUT=2.0

# Reverse proxy / HTTPS
FORCE_HTTPS=false
# In production behind HTTPS, also configure cookies:
# SESSION_SECURE_COOKIE=true
# SESSION_DOMAIN=rentro.zacky.id
# SESSION_SAME_SITE=lax
TRUSTED_PROXIES=*
TRUSTED_HOSTS=^.*$

# Payments
MIDTRANS_PRODUCTION=true
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
