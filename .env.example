APP_NAME=Rentro
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8888
APP_VERSION=0.1.0

# Localization & timezone
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_TIMEZONE=Asia/Jakarta

# Maintenance
APP_MAINTENANCE_DRIVER=file

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=warning

# Database (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=app
DB_USERNAME=app
DB_PASSWORD=secret

# Sessions/Queue/Cache
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis
CACHE_STORE=redis
CACHE_DRIVER=redis

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PORT=6379

# Broadcasting / Reverb (Realtime websockets)
BROADCAST_CONNECTION=reverb
BROADCAST_GLOBAL_PRIVATE=false

# Reverb server-side app credentials
REVERB_APP_ID=rentro
REVERB_APP_KEY=rentro-key
REVERB_APP_SECRET=rentro-secret

# Client connection options
REVERB_HOST=127.0.0.1
REVERB_PORT=6001
REVERB_SCHEME=http

# Reverb server process config
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080
REVERB_SERVER_PATH=

# Optional: enable scaling via Redis pub/sub
REVERB_SCALING_ENABLED=false
REVERB_SCALING_CHANNEL=reverb

# CORS allowed origins for Reverb (comma-separated). Default to APP_URL
REVERB_ALLOWED_ORIGINS=${APP_URL}

# Frontend (Vite) Echo config
VITE_REVERB_APP_KEY=${REVERB_APP_KEY}
VITE_REVERB_HOST=${REVERB_HOST}
VITE_REVERB_PORT=${REVERB_PORT}
VITE_REVERB_SCHEME=${REVERB_SCHEME}
VITE_REVERB_WS_PATH=${REVERB_SERVER_PATH}
VITE_NOTIFICATIONS_GLOBAL_PRIVATE=${BROADCAST_GLOBAL_PRIVATE}
VITE_BELL_INCLUDE_ANNOUNCEMENTS=false

# Mail (log by default)
MAIL_MAILER=log
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME=${APP_NAME}

VITE_APP_NAME=${APP_NAME}
VITE_I18N_PRELOAD_ALL=false
VITE_DISABLE_HMR=true

# Reverse proxy / HTTPS
FORCE_HTTPS=false
TRUSTED_PROXIES=*
TRUSTED_HOSTS=^.*$

# Payments
MIDTRANS_PRODUCTION=true
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=

# Diagnostics (optional; do not enable in production)
PROXY_DEBUG_ENABLED=${APP_DEBUG}
# PROXY_DEBUG_TOKEN=
