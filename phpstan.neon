includes:
  - vendor/nesbot/carbon/extension.neon
  - phpstan-baseline.neon

parameters:
  level: 5

  paths:
    - app
    - config
    - routes

  bootstrapFiles:
    - vendor/autoload.php

  tmpDir: storage/tmp/phpstan

  reportUnmatchedIgnoredErrors: false

  excludePaths:
    - database/*
    - storage/*
    - vendor/*
    - node_modules/*
    - bootstrap/cache/*
    - tests/Fixtures/*

  ignoreErrors:
    - '#Call to an undefined method Illuminate\\Support\\Collection::.*#'
    - '#@var PHPDoc tag.*could be replaced by native type hint#'
